---
import Section from '@/components/Section.astro';
import Mail from '@/icons/Mail.astro';
import Phone from '@/icons/Phone.astro';
import WolrdMap from '@/icons/WorldMap.astro';
import { basics } from '@cv';

const { name, label, image, location, phone, email } = basics;
const { city, region } = location;

const printInfo = [email, phone].filter(Boolean).join(' • ');
---

<Section>
	<article class='container'>
		<div class='info'>
			<h1>{name}</h1>
			<h2>{label}</h2>
			<span>
				<WolrdMap />
				{city}, {region}
			</span>
			<footer class='print'>
				{printInfo}
			</footer>
			<footer class='no-print'>
				{
					email && (
						<a href={`mailto:${email}`} title={`Enviar un correo electrónico a ${name} al correo ${email}`} target='_blank' rel='nooper noreferrer'>
							<Mail />
						</a>
					)
				}
				{
					phone && (
						<a href={`tel:${phone}`} title={`Llamar por teléfono a ${name} al número ${phone}`} target='_blank' rel='nooper noreferrer'>
							<Phone />
						</a>
					)
				}
			</footer>
		</div>
		<figure>
			<img src={image} alt={name} />
		</figure>
	</article>
</Section>

<style>
	.container {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}
	.info {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		padding-right: 2rem;
	}
	h1 {
		font-size: 2rem;
	}
	h2 {
		color: #444;
		font-weight: 500;
		font-size: 1.1rem;
		text-wrap: balance;
	}
	img {
		aspect-ratio: 1 / 1;
		object-fit: cover;
		width: 128px;
		border-radius: 16px;
	}
	span {
		color: #666;
		display: flex;
		align-items: center;
		gap: 0.25rem;
		font-size: 0.85rem;
		letter-spacing: -0.05rem;
	}
	footer {
		color: #555;
		font-size: 0.8rem;
		display: flex;
		gap: 4px;
		margin-top: 0.5rem;
	}
	footer a {
		color: #777;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		border: 1px solid #eee;
		padding: 0.25rem;
		width: 32px;
		height: 32px;
		border-radius: 6px;
		transition: all 0.3s ease;
	}
	footer a:hover {
		background-color: #eee;
	}
	.print {
		display: none;
	}
	@media print {
		.no-print {
			display: none;
		}
		.print {
			display: block;
		}
	}
</style>
